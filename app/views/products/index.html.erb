<div class="page-header">
  <h1>
    Products
    <a href="/products/new" class="btn btn-lg btn-success">New Product</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "products_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :likes_cont, "Likes contains" %>
    <%= f.text_field :likes_cont, :class => "form-control", :placeholder => "Likes contains" %>
  </div>

<div class="form-group">
    <%= f.label :price_cont, "Price contains" %>
    <%= f.text_field :price_cont, :class => "form-control", :placeholder => "Price contains" %>
  </div>

<div class="form-group">
    <%= f.label :benefits_cont, "Benefits contains" %>
    <%= f.text_field :benefits_cont, :class => "form-control", :placeholder => "Benefits contains" %>
  </div>

<div class="form-group">
          <%= f.label :expriration, "Expriration" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='exprirationgteqPicker'>
                  <%= f.text_field :expriration_gteq, :class => "form-control", :placeholder => "Expriration greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='exprirationlteqPicker'>
                  <%= f.text_field :expriration_lteq, :class => "form-control", :placeholder => "Expriration less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#exprirationgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#exprirationlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#exprirationgteqPicker').on("dp.change", function (e) {
                  $('#exprirationlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#exprirationlteqPicker').on("dp.change", function (e) {
                  $('#exprirationgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :product_id, "Brand Product" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :brand_product_id_gteq, :class => "form-control", :placeholder => "Brand Product greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :brand_product_id_lteq, :class => "form-control", :placeholder => "Brand Product less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/products" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#products_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Expriration</th>
        <th>Image</th>
        <th>Brand</th>
        <th>Benefits</th>
        <th>Price</th>
        <th>Likes</th>
        <th>Actions</th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.expriration %></td>
        <td><img src='<%= product.image %>' class='img-responsive'></td>
        <td>
          <% if product.brand.present? %>
            <a href="/brands/<%= product.brand.id %>">
              <%= product.brand.product_id %>
            </a>
          <% end %>
        </td>
        <td><%= product.benefits %></td>
        <td><%= product.price %></td>
        <td><%= product.likes %></td>
        <td>
          <a href="/products/<%= product.id %>" class="btn btn-primary">Show</a>
          <a href="/products/<%= product.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_product/<%= product.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @products, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
