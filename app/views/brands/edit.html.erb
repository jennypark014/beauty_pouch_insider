<!-- Validation failure messages -->
<% if @brand.errors.any? %>
  <% @brand.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Brand #<%= @brand.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_brand/<%= @brand.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @brand.name %>">
      </div>

      <!-- Label and input for ceo -->
      <div class="form-group">
        <label for="ceo" class="control-label">
          Ceo
        </label>

        <input type="text" id="ceo" name="ceo" placeholder="Ceo" class="form-control" value="<%= @brand.ceo %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @brand.description %></textarea>
      </div>

      <!-- Label and input for headline_products -->
      <div class="form-group">
        <label for="headline_products" class="control-label">
          Headline products
        </label>

        <input type="text" id="headline_products" name="headline_products" placeholder="Headline products" class="form-control" value="<%= @brand.headline_products %>">
      </div>

      <!-- Label and input for beauty_rankings -->
      <div class="form-group">
        <label for="beauty_rankings" class="control-label">
          Beauty rankings
        </label>

        <input type="text" id="beauty_rankings" name="beauty_rankings" placeholder="Beauty rankings" class="form-control" value="<%= @brand.beauty_rankings %>">
      </div>

      <button class="btn btn-warning">
        Update Brand
      </button>
      or
      <a href="/brands/<%= @brand.id %>">Cancel</a>
    </form>
  </div>
</div>
