<div class="page-header">
  <h1>
    Brands
    <a href="/brands/new" class="btn btn-lg btn-success">New Brand</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "brands_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :beauty_rankings, "Beauty rankings" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :beauty_rankings_gteq, :class => "form-control", :placeholder => "Beauty rankings greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :beauty_rankings_lteq, :class => "form-control", :placeholder => "Beauty rankings less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :headline_products_cont, "Headline products contains" %>
    <%= f.text_field :headline_products_cont, :class => "form-control", :placeholder => "Headline products contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :ceo_cont, "Ceo contains" %>
    <%= f.text_field :ceo_cont, :class => "form-control", :placeholder => "Ceo contains" %>
  </div>

<div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :products_name_cont, "Product name contains" %>
      <%= f.text_field :products_name_cont, :class => "form-control", :placeholder => "Product name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/brands" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#brands_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Ceo</th>
        <th>Description</th>
        <th>Headline products</th>
        <th>Beauty rankings</th>
        <th>Actions</th>
      </tr>

      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.ceo %></td>
        <td><%= brand.description %></td>
        <td><%= brand.headline_products %></td>
        <td><%= brand.beauty_rankings %></td>
        <td>
          <a href="/brands/<%= brand.id %>" class="btn btn-primary">Show</a>
          <a href="/brands/<%= brand.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_brand/<%= brand.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @brands, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
